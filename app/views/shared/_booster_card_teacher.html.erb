<div class="flip-card" data-daily-booster-target="card">
  <div class="flip-card-inner">
    <div class="flip-card-front card_back crossrotate">
    </div>
    <div class="flip-card-back game-card">
      <div class="game-card-image"  style="background-image: url(<%=asset_path(card.avatar)%>)"></div>
      <div class="game-card-name teacher-color"><%= link_to card.first_name, card_path(card) %> <%= link_to card.last_name, card_path(card) %></div>

      <div class="game-card-points teacher-bck-color">
        <div class="one-third teacher-border">
            <div>Status</div>
            <div class="one-third-text"><%= card.status.first.capitalize %></div>
        </div>

        <div class="one-third teacher-border">
          <div>Points</div>
          <div class="one-third-text"> <%= card.points %></div>
        </div>

        <div class="one-third no-border teacher-border">
          <div class="one-third-text">
            <%= link_to card.github do %>
              <%= fa_icon "github", class:"github-icon-game"%>
            <% end %>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
