<div class="card-show">
  <div class="card-img" style="background-image: url( <%= asset_path(@card.avatar)%>) ">
  </div>
  <div class="card-infos">
    <div>
      <h5><%= @card.first_name %> <%= @card.last_name %></h5>
      <h6><%= @card.status.capitalize %></h6>
    </div>

    <hr class="card-hr">

    <div class="card-infos-display">
      <div><%= @card.city %></div>
      <div><%= link_to 'Github', @card.github %></div>
    </div>

    <hr class="card-hr">

    <div>
      <h6><%= @card.points %></h6>
    </div>

    <hr class="card-hr">

    <div>
      <div class="card-infos-center">#<%= @card.batch %></div>
      <div class="card-infos-display">
        <p>Le wagon <%= @card.city %></p>
        <p><%= @card.batch_date %></p>
      </div>
    </div>

  </div>
</div>
